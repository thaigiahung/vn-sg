<input type="hidden" id="modelName" value="Category">

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Manage Category</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        List of categories
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="list-item">
            <thead>
              <tr>
                <th>Id</th>
                <th>name</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% _.each(categories, function (obj) { %>
                <tr>
                  <td>
                    <p><%= obj.id %></p>
                  </td>
                  <td>
                    <input type="hidden" value="<%= obj.id %>">
                    <input type="hidden" value="name">
                    <p contenteditable="true" class="manage-category-name">
                      <%= obj.name %>
                    </p>                    
                  </td>
                  
                  <% if (obj.status == 1) { %>
                    <td>Active</td>
                  <% } else { %>
                    <td>Disable</td>
                  <% } %> 

                  <td>
                    <% if (obj.status == 1) { %>
                      <button type="button" onclick="disableItem(this,'Category',<%= obj.id %>,'status')" class="btn btn-danger">Disable</button>
                      <button style="display: none;" type="button" onclick="activeItem(this,'Category',<%= obj.id %>,'status')" class="btn btn-success">Active</button>
                    <% } else { %>
                      <button style="display: none;" type="button" onclick="disableItem(this,'Category',<%= obj.id %>,'status')" class="btn btn-danger">Disable</button>
                      <button type="button" onclick="activeItem(this,'Category',<%= obj.id %>,'status')" class="btn btn-success">Active</button>
                    <% } %>
                  </td>                            
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <div class="text-center">
          <button type="submit" id="btnAdd" onClick="add()" class="btn btn-lg btn-primary add">Insert category</button>                    
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->

    <div id="form" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Insert category</h4>
          </div>

          <div class="modal-body">
            <div id="message" class="alert alert-danger" role="alert" style="display: none;"></div>
            <form role="form">
              <div class="form-group">
                <label for="object-name">Name *</label>
                <input type="hidden" class="form-control" id="hd-action-type">
                <input type="hidden" class="form-control" id="hd-object-id">
                <input type="text" class="form-control" id="object-name" placeholder="Name" maxlength="20">
              </div>
              <div class="form-group">
                <label for="object-description">Description</label>
                <input type="text" class="form-control" id="object-description" placeholder="Description">
              </div>
              <div class="form-group" id="div-status">
                <label for="object-status">Status </label>
                <label class="radio-inline">
                  <input type="radio" name="object-status" id="rdoStatus1" value="true">Deleted
                </label>
                <label class="radio-inline">
                  <input type="radio" name="object-status" id="rdoStatus2" value="false">Activated
                </label>
              </div>
            </form>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" onClick="save()" class="btn btn-primary">Save</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


    <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Error</h4>
          </div>
          <div class="modal-body" id="errorModelMessage">

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

  </div>
  <!-- /.col-lg-12 -->
</div>